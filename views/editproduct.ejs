<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Producto</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f7fa;
      color: #333;
      animation: fadeInPage 0.5s ease-in-out;
    }

    @keyframes fadeInPage {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .container {
      max-width: 500px;
      margin: 3rem auto;
      background-color: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
      animation: slideIn 0.6s ease;
    }

    @keyframes slideIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h1 {
      text-align: center;
      color: #3f51b5;
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin: 0.8rem 0 0.3rem;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      transition: border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="number"]:focus {
      outline: none;
      border-color: #3f51b5;
    }

    .checkbox-group {
      display: flex;
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .checkbox-group label {
      display: flex;
      align-items: center;
      gap: 0.4rem;
      font-weight: normal;
      font-size: 0.95rem;
    }

    input[type="checkbox"] {
      width: 16px;
      height: 16px;
      cursor: pointer;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 2rem;
    }

    button[type="submit"] {
      background-color: #4caf50;
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
      background-color: #388e3c;
    }

    .cancel-link {
      text-decoration: none;
      background-color: #f44336;
      color: white;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      font-size: 1rem;
      transition: background-color 0.3s;
    }

    .cancel-link:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1>Editar Producto</h1>
    <form action="/products/<%= producto._id %>/edit" method="POST">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" value="<%= producto.name %>" required>

      <label for="price">Precio:</label>
      <input type="number" id="price" name="price" value="<%= producto.price %>" step="0.01" required>

      <label for="promotion">Promoción:</label>
      <input type="text" id="promotion" name="promotion" value="<%= producto.promotion %>">

      <div class="checkbox-group">
        <label>
          <input type="checkbox" name="promotion_enabled" <%= producto.promotion_enabled ? "checked" : "" %>> Promoción activa
        </label>
        <label>
          <input type="checkbox" name="available" <%= producto.available ? "checked" : "" %>> Disponible
        </label>
      </div>

      <div class="buttons">
        <button type="submit">Guardar Cambios</button>
        <a href="/products" class="cancel-link">Cancelar</a>
      </div>
    </form>
  </div>

</body>
</html>